<div class="form-container">
    <h1>
        <%= title %>
    </h1>

    <%- messages() %>

        <% if (errors) { %>
            <ul class="notice">
                <% errors.array().forEach(error=> { %>
                    <li>
                        <%= error.msg %>
                    </li>
                    <% }) %>
            </ul>
            <% } %>

                <form id="addInventoryForm" action="/inv/add-inventory" method="post">
                    <div class="form-group">
                        <label for="classification_id">Classification:<span class="required">*</span></label>
                        <%- classificationList %>
                    </div>

                    <div class="form-group">
                        <label for="inv_make">Make:<span class="required">*</span></label>
                        <input type="text" id="inv_make" name="inv_make" required
                            placeholder="Enter vehicle make (min 3 characters)" minlength="3"
                            value="<%= locals.inv_make ? inv_make : '' %>">
                    </div>

                    <div class="form-group">
                        <label for="inv_model">Model:<span class="required">*</span></label>
                        <input type="text" id="inv_model" name="inv_model" required
                            placeholder="Enter vehicle model (min 3 characters)" minlength="3"
                            value="<%= locals.inv_model ? inv_model : '' %>">
                    </div>

                    <div class="form-group">
                        <label for="inv_year">Year:<span class="required">*</span></label>
                        <input type="text" id="inv_year" name="inv_year" required placeholder="Enter 4-digit year"
                            pattern="^\d{4}$" maxlength="4" title="Year must be exactly 4 digits"
                            value="<%= locals.inv_year ? inv_year : '' %>">
                    </div>

                    <div class="form-group">
                        <label for="inv_description">Description:<span class="required">*</span></label>
                        <textarea id="inv_description" name="inv_description" required
                            placeholder="Enter vehicle description"
                            rows="4"><%= locals.inv_description ? inv_description : '' %></textarea>
                    </div>

                    <div class="form-group">
                        <label for="inv_image">Image Path:<span class="required">*</span></label>
                        <input type="text" id="inv_image" name="inv_image" required
                            placeholder="/images/vehicles/no-image.png"
                            value="<%= locals.inv_image ? inv_image : '/images/vehicles/no-image.png' %>">
                        <p class="input-note">Example: /images/vehicles/vehicle-name.jpg</p>
                    </div>

                    <div class="form-group">
                        <label for="inv_thumbnail">Thumbnail Path:<span class="required">*</span></label>
                        <input type="text" id="inv_thumbnail" name="inv_thumbnail" required
                            placeholder="/images/vehicles/no-image-tn.png"
                            value="<%= locals.inv_thumbnail ? inv_thumbnail : '/images/vehicles/no-image-tn.png' %>">
                        <p class="input-note">Example: /images/vehicles/vehicle-name-tn.jpg</p>
                    </div>

                    <div class="form-group">
                        <label for="inv_price">Price:<span class="required">*</span></label>
                        <input type="number" id="inv_price" name="inv_price" required
                            placeholder="Enter price (without commas or decimals)" min="0" step="1"
                            value="<%= locals.inv_price ? inv_price : '' %>">
                    </div>

                    <div class="form-group">
                        <label for="inv_miles">Miles:<span class="required">*</span></label>
                        <input type="number" id="inv_miles" name="inv_miles" required placeholder="Enter mileage"
                            min="0" step="1" value="<%= locals.inv_miles ? inv_miles : '' %>">
                    </div>

                    <div class="form-group">
                        <label for="inv_color">Color:<span class="required">*</span></label>
                        <input type="text" id="inv_color" name="inv_color" required placeholder="Enter vehicle color"
                            value="<%= locals.inv_color ? inv_color : '' %>">
                    </div>

                    <button type="submit" class="btn-primary">Add Vehicle</button>
                </form>
</div>