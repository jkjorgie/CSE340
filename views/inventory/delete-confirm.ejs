<div class="form-container">
    <h1>
        <%= title %>
    </h1>

    <%- messages() %>

        <% if (errors) { %>
            <ul class="notice">
                <% errors.array().forEach(error=> { %>
                    <li>
                        <%= error.msg %>
                    </li>
                    <% }) %>
            </ul>
            <% } %>

                <form id="deleteForm" action="/inv/delete-inventory" method="post">

                    <div class="form-group">
                        <label for="inv_make">Make:<span class="required">*</span></label>
                        <input type="text" id="inv_make" name="inv_make" required readonly
                            placeholder="Enter vehicle make (min 3 characters)" minlength="3"
                            value="<%= locals.inv_make ? inv_make : '' %>">
                    </div>

                    <div class="form-group">
                        <label for="inv_model">Model:<span class="required">*</span></label>
                        <input type="text" id="inv_model" name="inv_model" required readonly
                            placeholder="Enter vehicle model (min 3 characters)" minlength="3"
                            value="<%= locals.inv_model ? inv_model : '' %>">
                    </div>

                    <div class="form-group">
                        <label for="inv_year">Year:<span class="required">*</span></label>
                        <input type="text" id="inv_year" name="inv_year" required readonly
                            readonlyplaceholder="Enter 4-digit year" pattern="^\d{4}$" maxlength="4"
                            title="Year must be exactly 4 digits" value="<%= locals.inv_year ? inv_year : '' %>">
                    </div>

                    <div class="form-group">
                        <label for="inv_price">Price:<span class="required">*</span></label>
                        <input type="number" id="inv_price" name="inv_price" required readonly
                            placeholder="Enter price (without commas or decimals)" min="0" step="1"
                            value="<%= locals.inv_price ? inv_price : '' %>">
                    </div>

                    <button type="submit" class="btn-primary">Delete Vehicle</button>
                    <input type="hidden" name="inv_id" <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
                        <% } %>>
                </form>
</div>