<div class="account-management-container">
    <h1>
        <%= title %>
    </h1>

    <%- messages() %>

        <% if (errors) { %>
            <ul class="notice">
                <% errors.array().forEach(error=> { %>
                    <li>
                        <%= error.msg %>
                    </li>
                    <% }) %>
            </ul>
            <% } %>

                <div class="account-content">
                    <h2>Welcome <%= accountData.account_firstname %></h2>
                    
                    <p class="account-link">
                        <a href="/account/update/<%= accountData.account_id %>" title="Update your account information">Update Account Information</a>
                    </p>

                    <% if (accountData.account_type === "Employee" || accountData.account_type === "Admin") { %>
                        <h3>Inventory Management</h3>
                        <p class="account-link">
                            <a href="/inv/" title="Manage inventory">Manage Inventory</a>
                        </p>
                    <% } %>
                </div>
</div>